---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About | Banana";

const identity = {
  firstName: "Sarah",
  country: "Canada",
  occupation: "Technical Writer",
  hobbies: ["photography", "birdwatching", "baseball"],
  skills: ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"],
};

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";

// const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
---

<BaseLayout {pageTitle}>
  
  <style define:vars={{ skillColor, fontWeight }}>
    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
    }
  </style>

  <h1>About Me</h1>
  <h2>{identity.firstName} and my new Astro site!</h2>

  <p>Here are a few facts about me:</p>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>
      I live in {identity.country} and I work as a {identity.occupation}.
    </li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    <!-- {skills.map((skill) => <li>{skill}</li>)} -->
    {identity.skills.map((item) => <li class="skill">{item}</li>)}
  </ul>
</BaseLayout>
